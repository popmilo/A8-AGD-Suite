EVENT MAINLOOP1

 IF KEY OPTION1		; Check for press 1
  IF E < 160
    ADD 1 TO E
  ENDIF
  LET R = 1
 ENDIF

 IF KEY OPTION2		; Check for press 2
  IF E > 0
    SUBTRACT 1 FROM E
  ENDIF
  LET R = 1
 ENDIF

  IF R = 1		; Only draw bar if keys pressed

  LET J = E
  DIVIDE J BY 8		; J = nr full blocks
  LET I = J
  MULTIPLY I BY 8
  LET K = E
  SUBTRACT I FROM K	; K = topblock

  LET L = 21

  IF J > 0
    REPEAT J		; Draw vertical bar
     AT L,31
     PUTBLOCK 8
     SUBTRACT 1 FROM L
    ENDREPEAT
  ENDIF

  AT L,31		; Draw top
  IF E < 160
    PUTBLOCK K
  ENDIF

  LET R = 0

 ENDIF

